mixin guest-dropdown({contClassMods, containerMods, inputClassMods, type, placeholder, name, value})
  div(class=`guest-dropdown ${contClassMods}`)
    div(class=`guest-dropdown__container ${containerMods}`)
      input(class=`guest-dropdown__input ${inputClassMods}` type=`${type}` placeholder=`${placeholder}` name=`${name}` value=`${value}`)
      button(class='guest-dropdown__button' type='button')
        <svg class='guest-dropdown__open' width="13" height="8" viewBox="0 0 13 8" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M11.3301 0.578125L12.7363 1.98438L6.73633 7.98438L0.736328 1.98438L2.14258 0.578125L6.73633 5.17188L11.3301 0.578125Z" fill="#1F2041" fill-opacity="0.5"/>
        </svg>
