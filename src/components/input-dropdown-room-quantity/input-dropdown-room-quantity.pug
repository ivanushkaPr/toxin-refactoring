mixin input-dropdown-room-quantity({blockMods, contMods, inputClassMods, type, placeholder, name, value, controlsMods, properties})
  div(class=`dropdown_room_quantity ${blockMods}`)
    div(class=`dropdown_room_quantity__cont ${contMods}`)
      input(class=`dropdown_room_quantity__input js-dropdown_room_quantity__input ${inputClassMods}` type=`${type}` placeholder=`${placeholder}` name=`${name}` value=`${value}`)
      button(class=`dropdown_room_quantity__button js-dropdown_room_quantity__button` type='button')
        <svg class='' width="13" height="8" viewBox="0 0 13 8" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M11.3301 0.578125L12.7363 1.98438L6.73633 7.98438L0.736328 1.98438L2.14258 0.578125L6.73633 5.17188L11.3301 0.578125Z" fill="#1F2041" fill-opacity="0.5"/>
        </svg>

      div(class=`dropdown_room_quantity__controls ${controlsMods}`)
        each property in properties
          div(class=`dropdown_room_quantity__control_buttons js-dropdown_room_quantity__control_buttons`)
            p(class=`dropdown_room_quantity__property js-dropdown_room_quantity__property`) #{property[0]}
            
            div(class=`dropdown_room_quantity__container`)
              button(class=`dropdown_room_quantity__substract_button js-dropdown_room_quantity__substract_button ${property[1] <= 0 ? "disabled" : ""}` type='button')
                <svg width="6" height="2" viewBox="0 0 6 2" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M0.643477 0.121617H5.35948V1.23762H0.643477V0.121617Z" fill="#1F2041" fill-opacity="0.5"/>
                </svg>

              p(class=`dropdown_room_quantity__total js-dropdown_room_quantity__total`) #{property[1]}

              button(class=`dropdown_room_quantity__add_button js-dropdown_room_quantity__add_button ${property[1] >= 10 ? "disabled": "" }` type='button')
                <svg width="8" height="9" viewBox="0 0 8 9" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M7.91324 4.79762H4.56524V8.07362H3.43124V4.79762H0.0832422V3.73562H3.43124V0.441617H4.56524V3.73562H7.91324V4.79762Z" fill="#1F2041" fill-opacity="0.5"/>
                </svg>

