      }, 
  }
  

mixin search-room({position, top, left, sendTo, formName, searchRoomHeadline, doubleDateDropdown, inputDropdownGuests, buttonWide})
  -
    let positionMod = '';
    if(position === 'absolute' || position === 'static') {
      positionMod = `search-room__container_position_${position}`
    }

    let topMod = '';
    if(top === 140) {
      topMod = `search-room__container_top_${top}`
    }

    let leftMod = '';
    if(left === 140) {
      leftMod = `search-room__container_top_${left}`
    }
    const containerMods = `${positionMod} ${topMod} ${leftMod}`;


  section(class=`search-room`)
    section(class=`search-room__container ${containerMods}`)
      form(class='search-room__form' action=`${sendTo}`, method=`post` name=`${formName}` autocomplete=`false`)
        +component-headline(searchRoomHeadline)

        +double-date-dropdown(doubleDateDropdown)

        +input-description({containerMods: '',contentMods: '', description: 'гости'})
        +input-dropdown-guests(inputDropdownGuests)

        +button-wide(buttonWide)
