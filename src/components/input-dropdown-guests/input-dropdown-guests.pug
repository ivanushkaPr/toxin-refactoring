mixin input-dropdown-guests({ contMarginBottom, inputMarginBottom, controlsOpened, type, placeholder, name, value, properties})
  -
    let contMarginBottomMod = '';
    if(contMarginBottom) {
      contMarginBottomMod =  `input-dropdown-guests__cont_mb_${contMarginBottom}`
    }

    let inputMarginBottomMod = '';
    if(inputMarginBottom) {
      inputMarginBottomMod = `input-dropdown-guests__input_mb_${inputMarginBottom}`;
    }

    let controlsShowed = 'input-dropdown-guests__controls_hidden';
    let inputBorderColor = '';
    let inputBorderRadius = '';
    if(controlsOpened) {
      controlsShowed = ''
      inputBorderColor = 'input-dropdown-guests__input_border-color_dark-shade-50';
      inputBorderRadius = 'input-dropdown-guests__input_border-bottom-radius-0';
      controlsShowed = '';
    }


  div(class=`input-dropdown-guests`)
    div(class=`input-dropdown-guests__cont ${contMarginBottomMod}`)
      input(class=` input-dropdown-guests__input js-input-dropdown-guests__input ${inputMarginBottomMod} ${inputBorderColor} ${inputBorderRadius}` type=`${type}` placeholder=`${placeholder}` name=`${name}` value=`${value}`)
      button(class=`input-dropdown-guests__button js-input-dropdown-guests__button` type=`button`)
        <svg class='' width="13" height="8" viewBox="0 0 13 8" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M11.3301 0.578125L12.7363 1.98438L6.73633 7.98438L0.736328 1.98438L2.14258 0.578125L6.73633 5.17188L11.3301 0.578125Z" fill="#1F2041" fill-opacity="0.5"/>
        </svg>

      div(class=`input-dropdown-guests__controls ${controlsShowed}`)
        each property in properties
          div(class=`input-dropdown-guests__control-buttons`)
            p(class=`input-dropdown-guests__property`) #{property[0]}
            
            div(class=`input-dropdown-guests__container`)
              button(class=`input-dropdown-guests__substract-button js-input-dropdown-guests__substract-button ${property[1] < 1 ? 'disabled' : ''}` type='button')
                <svg width="6" height="2" viewBox="0 0 6 2" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M0.643477 0.121617H5.35948V1.23762H0.643477V0.121617Z" fill="#1F2041" fill-opacity="0.5"/>
                </svg>

              p(class=`input-dropdown-guests__total js-input-dropdown-guests__total`) #{property[1]}

              button(class=`input-dropdown-guests__add-button js-input-dropdown-guests__add-button ${property[1] > 9 ? 'disabled' : ''}` type='button')
                <svg width="8" height="9" viewBox="0 0 8 9" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M7.91324 4.79762H4.56524V8.07362H3.43124V4.79762H0.0832422V3.73562H3.43124V0.441617H4.56524V3.73562H7.91324V4.79762Z" fill="#1F2041" fill-opacity="0.5"/>
                </svg>
        div(class=`input-dropdown-guests__another-controls`)
          button(class=`input-dropdown-guests__button-reset js-input-dropdown-guests__button-reset ${resetMods}` type=`button`) Очистить
          button(class=`input-dropdown-guests__button-apply js-input-dropdown-guests__button-apply ${applyMods}` type=`button`) Применить
