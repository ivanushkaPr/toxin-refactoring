mixin subscription-text-field({containerMarginTop, inputWidth, type, placeholder, name, value})
  -
    let marginTopClass;
    if(containerMarginTop) {
      marginTopMod = `subscription-text-field__container_mt_${containerMarginTop}`;
    }

    let widthClass;
    if(inputWidth) {
      widthClassMod = `subscription-text-field__input_min-width_${inputWidth}`;
    }

  div(class=`subscription-text-field `)
    div(class=`subscription-text-field__container ${marginTopMod}`)
      input(class=`subscription-text-field__input ${widthClassMod}` type=`${type}` placeholder=`${placeholder}` name=`${name}` value=`${value}`)
      button(class='subscription-text-field__button' type='button')
        <svg class='subscription-text-field__open' width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
