mixin pagination({blockMods, containerMods, list, description})
  div(class=`pagination ${blockMods}`)
    div(class=`pagination ${containerMods}`)
      ul(class=`pagination__list`)
        each item in list
          if(item[0] === true)
            li(class=`pagination__item pagination__item--active` )
              a(class='pagination__link pagination__link--active' href='/mock-address/change-me') #{item[1]}
          else
            li(class=`pagination__item` ) 
              a(class='pagination__link' href='/mock-address/change-me') #{item[1]}
        li(class=`pagination__item pagination__item--background-gradient-next-button`)
          <svg width="18" height="17" viewBox="0 0 18 17" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M9 0.426758L17.0156 8.44238L9 16.458L7.59375 15.0518L13.1719 9.42676H0.984375V7.45801H13.1719L7.59375 1.83301L9 0.426758Z" fill="white"/>
          </svg>
      p(class=`pagination__description`) #{description}


        