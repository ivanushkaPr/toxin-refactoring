mixin room({paddingBottom, imageMarginTop, carouselID, imageOne, imageTwo, imageThree, imageFour, controlsID, dotsID, specialChar, roomNumber,  status, price, period, rating, ammount})
  -
    let containerPaddingBottomMod = '';
    if(paddingBottom) {
      containerPaddingBottomMod = `room__container_pb_${paddingBottom}`;
    }

    let imageMarginTopMod = '';
    if(imageMarginTop) {
      imageMarginTopMod = `room__images_mt_${imageMarginTop}`;
    }
  
  div(class=`room`)
    div(class=`room__container ${containerPaddingBottomMod}`)
      div(class=`room__images ${imageMarginTopMod}`)
        ul(class=`room__gallery owl-carousel owl-theme` id=`${carouselID}`)
          li(class=`room__image ${imageOne}`)
          li(class=`room__image ${imageTwo}`)
          li(class=`room__image ${imageThree}`)
          li(class=`room__image ${imageFour}`)
        
        div(class=`room__controls` id=`${controlsID}`)

        ul(class=`room__dots` id=`${dotsID}`)
          li(class=`room__dot room__dot_active `)
          li(class=`room__dot`)
          li(class=`room__dot`)
          li(class=`room__dot`)
      div(class=`room__overall`)
        p(class=`room__number`)
          spane(class=`room__special-char`) #{specialChar}
          span(class=`room__special-number`) #{roomNumber}
          span(class=`room__status`) #{status}
        p(class=`room_price`) #{price}
          span(class=`room__period`) #{period}
      div(class=`room__rating`)
        +rate-button({checkboxes: [1,2,3,4,5], rating: rating})
        p(class=`room__feedbacks`) #{ammount}
          span(class=`room__number-span`) Отзывов