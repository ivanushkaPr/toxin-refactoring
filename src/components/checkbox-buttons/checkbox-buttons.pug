mixin checkbox-buttons({containerMods, descMods, description, listMods, items})
  div(class=`checkbox_buttons`)
    div(class=`checkbox_buttons__container ${containerMods}`)
      p(class=`checkbox_buttons__description ${descMods}`) #{description}
      ul(class=`checkbox_buttons__list ${listMods}`)
        each item in items
          label(class=`checkbox_buttons__label`)
            input(class=`checkbox_buttons__input` type=`checkbox`) 
            div(class=`checkbox_buttons__checkbox`)
            p(class=`checkbox_buttons__text`) #{item}
      