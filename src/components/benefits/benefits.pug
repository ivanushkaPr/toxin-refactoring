mixin benefit({paddingTopPx, marginBottomPx, backgroundImage, nameText, propText})
  -
    let paddingMods;
    if(paddingTopPx) {
      paddingMods = `benefit__container_pt_${paddingTopPx}`;
    }

    let marginMods;
    if(marginBottomPx) {
      marginMods = `benefit__container_mt_${marginBottomPx}`;
    }

    let backgroundImageMod;
    if(backgroundImage) {
      backgroundImageMod = `benefit__image_background-image_${backgroundImage}`;
    }
  
  div(class=`benefit`)
    div(class=`benefit__container ${paddingMods} ${marginMods}`)
      div(class=`benefit__image ${backgroundImageMod}`)
      div(class=`benefit__description ${descMods}`)
        p(class=`benefit__name ${nameMods}`) #{nameText}
        p(class=`benefit__property ${propMods}`) #{propText}