mixin button({buttonType, buttonSm, marginRight, link, type, href, buttonText})
  -
    let buttonMods = '';
    if(buttonType === 'transparent') {
      buttonMods = `button__body_button_ellipse`;
    } else if(buttonType === 'gradient') {
      buttonMods = `button__body_button_ellipse button__body_background-linear-gradient_purple`;
    } else {
      buttonMods = ``;
    }


    let buttonSizeMod = '';
    if(buttonSm) {
      buttonSizeMod = `button__body_sm`;
    }

    let marginRightMod = ''
    if(marginRight) {
      marginRightMod = `button__body_mr_20`;
    }

    const mods = `${buttonMods} ${buttonSizeMod} ${marginRightMod}`;

  div(class=`button`)
    div(class=`button__container`)
      if(link === true)
        button(class=`button__body ${mods}` type=`${type}`)
          a(class=`button__link` href=`${href}`) #{buttonText}
      else 
        button(class=`button__body ${buttonMods}` type=`${type}`) #{buttonText}
