mixin input-filter-date-dropdown({blockMods, containerMods, inputClassMods, type, placeholder, name, value, calendarID})
  div(class=`input-filter-date-dropdown ${blockMods}`)
    div(class=`input-filter-date-dropdown__container ${containerMods}`)
      input(class=`input-filter-date-dropdown__input ${inputClassMods}` type=`${type}` placeholder=`${placeholder}` name=`${name}` value=`${value}`)
      button(class='input-filter-date-dropdown__button' type='button')
        <svg class='input-filter-date-dropdown__open' width="13" height="8" viewBox="0 0 13 8" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M11.3301 0.578125L12.7363 1.98438L6.73633 7.98438L0.736328 1.98438L2.14258 0.578125L6.73633 5.17188L11.3301 0.578125Z" fill="#1F2041" fill-opacity="0.5"/>
        </svg>
  div(class=`input-filter-date-dropdown-calendar` id=`${calendarID}`)
