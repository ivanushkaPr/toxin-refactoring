mixin input_dropdown_guests(object)
  div(class=`input_dropdown_guests ${object.contClassMods}`)
    input(class=`input_dropdown_guests__input ${object.inputClassMods}` type=`${object.type}` placeholder=`${object.placeholder}` name=`${object.name}` value=`${object.value}`)
    button(class=`input_dropdown_guests__button`)
      <svg class='' width="13" height="8" viewBox="0 0 13 8" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M11.3301 0.578125L12.7363 1.98438L6.73633 7.98438L0.736328 1.98438L2.14258 0.578125L6.73633 5.17188L11.3301 0.578125Z" fill="#1F2041" fill-opacity="0.5"/>
      </svg>

    div(class=`input_dropdown_guests__controls ${object.controlsMods}`)
      each property in object.properties
        div(class=`input_dropdown_guests__control_buttons`)
          p(class=`input_dropdown_guests__property`) #{property[0]}
          
          div(class=`input_dropdown_guests__container`)
            button(class=`input_dropdown_guests__substract_button`)
              <svg width="6" height="2" viewBox="0 0 6 2" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M0.643477 0.121617H5.35948V1.23762H0.643477V0.121617Z" fill="#1F2041" fill-opacity="0.5"/>
              </svg>

            p(class=`input_dropdown_guests__total`) #{property[1]}

            button(class=`input_dropdown_guests__add_button`)
              <svg width="8" height="9" viewBox="0 0 8 9" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M7.91324 4.79762H4.56524V8.07362H3.43124V4.79762H0.0832422V3.73562H3.43124V0.441617H4.56524V3.73562H7.91324V4.79762Z" fill="#1F2041" fill-opacity="0.5"/>
              </svg>
      div(class=`input_dropdown_guests__another-controls`)
        button(class=`input_dropdown_guests__button_reset ${object.resetMods}`) Очистить
        button(class=`input_dropdown_guests__button_apply ${object.applyMods}`) Применить
