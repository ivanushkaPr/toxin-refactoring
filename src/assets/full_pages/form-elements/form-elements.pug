mixin form-elements(form_elements_configuration)
  div(class='form_elements_container')
    +grid({mods: 'grid--form-elements-first-row'})
      +input_description_container(form_elements_configuration.email_text_field_container)
        +input_description(form_elements_configuration.email_text_field_description)
        +input_description(form_elements_configuration.email_text_field_state)
      +text-field(form_elements_configuration.email_text_field)

      +input_description_container(form_elements_configuration.email_text_field_hover_effect_container)
        +input_description(form_elements_configuration.email_text_field_description)
        +input_description(form_elements_configuration.email_text_field_hover_effect_state)
      +text-field(form_elements_configuration.email_text_field_hover_effect)


      +input_description_container(form_elements_configuration.guest_dropdown_container)
        +input_description(form_elements_configuration.guest_dropdown_description)
        +input_description(form_elements_configuration.guest_dropdown_state)
      +guest_dropdown(form_elements_configuration.guest_dropdown_default)

      +input_description_container(form_elements_configuration.masked_text_field_container)
        +input_description(form_elements_configuration.masked_text_field_description)
        +input_description(form_elements_configuration.masked_text_field_state)
      +masked_text_field(form_elements_configuration.masked_text_field)

      +input_date_dropdown_container({mods: 'input_date_dropdown_container--pp-padding-top'})
        +input_and_description_wrapper({})
          +input_description(form_elements_configuration.input_date_dropdown_description)
          +input_date_dropdown(form_elements_configuration.input_date_dropdown_default)

        +input_and_description_wrapper({})
          +input_description(form_elements_configuration.input_date_dropdown_description)
          +input_date_dropdown(form_elements_configuration.input_date_dropdown_data_selected)

      +input_description(form_elements_configuration.input_filter_date_dropdown_description)
      +input_filter_date_dropdown(form_elements_configuration.input_filter_date_dropdown)

      +input_description(form_elements_configuration.subscription_text_field_description)
      +subscription_text_field(form_elements_configuration.subscription_text_field)

      +input_and_description_wrapper({mods: 'input_and_description_wrapper--md'})
        +input_description_container(form_elements_configuration.input_dropdown_room_quantity_container)
          +input_description(form_elements_configuration.input_dropdown_room_quantity_description)
          +input_description(form_elements_configuration.input_dropdown_room_quantity_state)
        +input_dropdown_room_quantity(form_elements_configuration.input_dropdown_room_quantity)

      +input_and_description_wrapper({mods: 'input_and_description_wrapper--md'})
        +input_description_container(form_elements_configuration.input_dropdown_room_quantity_expanded_container)
          +input_description(form_elements_configuration.input_dropdown_room_quantity_expanded_description)
          +input_description(form_elements_configuration.input_dropdown_room_quantity_expanded_state)
        +input_dropdown_room_quantity(form_elements_configuration.input_dropdown_room_quantity_expanded)

      +expandable_checkbox_list(form_elements_configuration.expandable_checkbox_list)
      +expandable_checkbox_list(form_elements_configuration.expandable_checkbox_list_opened)

      +benefit({contMods: 'benefit-pp', imageMods: 'benefit__image--background-smile', nameText: 'Комфорт', propText: 'Шумопоглощающие стены'}) 
      +benefit({contMods: 'benefit-pp', imageMods: 'benefit__image--background-building', nameText: 'Удобство', propText: 'Окно в каждой из спален'})

