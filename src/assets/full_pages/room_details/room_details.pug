mixin room_details(object)
  section(class=`room_details`)
    +header_register(object.header_register_configuration)

    //
      section(class=`room_details__review`)
        div(class=`room_details__image-bg room_details__image-bg--big`) 
        div(class=`room_details__image-sm room_details__image-sm--sm-first`)
        div(class=`room_details__image-sm room_details__image-sm--sm-second`)
    section(class=`room_details__content`)
        section(class=`room_details__information`)
          +component_headline(object.information)
          div(class=`room_details__wrapper`)
            div(class=`room_details__benefits`)
              +benefit({contMods: "benefit--room_details--pp", imageMods: "benefit__image--background-smile", nameText: "Комфорт", propText: "Шумопоглощающие стены"}) 
              +benefit({contMods: "benefit--room_details--pp", imageMods: "benefit__image--background-building", nameText: "Удобство", propText: "Окно в каждой из спален"})
              +benefit({contMods: "benefit--room_details--pp", imageMods: "benefit__image--background-hot", nameText: "Уют", propText: "Номер оснащен камином"})
            div(class=`room_details__statistiks`)
              +pie_chart(object.pie_chart)

          +component_headline(object.feedback)
          div(class=`room_details__feedback`)
            +appointment({
              image: "murad",
              name: "Мурад Сафронов",
              date: "5 дней назад",
              text: `Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий.
              И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто
              не жаловался из соседей.`})

            +appointment({
              userMods: "appointment__user--second_appointment--margin-top ",
              image: "patricia",
              name: "Патрисия Стёклышкова",
              date: "Неделю назад",
              text: `Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент`})

          div(class=`room_details__wrapper room_details__wrapper--rules-and-cancelation`)
            div(class=`room_details__rules`)
              +bulletlist({
                descMods: "bulletlist__description--font_size-bg bulletlist__description--font_familt_open_sans bulletlist__description--text-transform_none",
                description: "Правила",
                items: ["Нельзя с питомцами", "Без вечеринок и мероприятий", "Время прибытия — после 13:00, а выезд до 12:00"]
              })

            div(class=`room_details__cancelation`)
              +text_block(object.text_block)
        section(class=`room_details__booking`)
          +cost_calculator(object.cost_calculator)
    +footer(object.footer_configuration)